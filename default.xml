<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote fetch="http://code.ossystems.com.br" name="ossystems" review="code.ossystems.com.br"/>
  <remote fetch="git://git.yoctoproject.org" name="yocto"/>
  <remote fetch="git://github.com/Freescale" name="fslc"/>
  <remote fetch="git://git.openembedded.org" name="oe"/>

  <default revision="invalidRevision" sync-j="4"/>

  <project remote="oe" revision="pyro" name="openembedded-core" path="sources/openembedded-core" />
  <project remote="oe" revision="pyro" name="bitbake" path="sources/bitbake" />
  <project remote="oe" revision="pyro" name="meta-openembedded" path="sources/meta-openembedded"/>

  <project remote="ossystems"  revision="pyro" name="ossystems-yocto-base-scripts" path="sources/base">
    <copyfile dest="setup-environment" src="setup-environment"/>
  </project>

  <!-- O.S. Systems Yocto BSP -->
  <project remote="ossystems" revision="pyro" name="meta-ossystems-base" path="sources/meta-ossystems-base"/>
  <project remote="ossystems" revision="pyro" name="meta-ossystems" path="sources/meta-ossystems"/>

  <!-- Freescale BSP components -->
  <project remote="ossystems" revision="pyro" name="meta-freescale" path="sources/meta-freescale"/>
  <project remote="ossystems" revision="pyro" name="meta-freescale-3rdparty" path="sources/meta-freescale-3rdparty"/>
  <project remote="ossystems" revision="pyro" name="meta-freescale-distro" path="sources/meta-freescale-distro"/>

  <!-- conf -->
  <project remote="ossystems" revision="pyro" name="ossystems-yocto-platform" path="sources/conf/repo"/>
  <project remote="ossystems" revision="pyro" name="ossystems-yocto-config" path="sources/conf/tools"/>

  <!-- ye -->
  <project name="apps/ye" path="sources/ye" remote="ossystems" revision="master"/>
</manifest>
